# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /sample                           controllers.SampleController.index
GET     /sample/hoge                           controllers.SampleController.hoge
GET     /sample/list                           controllers.SampleController.list
GET     /sample/test                           controllers.SampleController.test
GET     /signin                           controllers.DefaultController.signin


GET     /campaign/list                  controllers.CampaignController.list
GET     /campaign/add                   controllers.CampaignController.add
GET     /campaign/edit                  controllers.CampaignController.edit

GET     /report/by-campaign             controllers.ReportController.byCampaign
GET     /report/by-date                 controllers.ReportController.byDate

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
